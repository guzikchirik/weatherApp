<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ************************************************************ -->
    <style name="TextView">
    <item name="android:textColor">@color/white</item>
    </style>
    <!-- Основные классы стилей -->
    <style name="result_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="add_new_user">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="main_user_activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">50sp</item>
        <item name="android:layout_marginEnd">50sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:backgroundTint">@color/mua_btn_blue</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/mua_txt_gray</item>
        <item name="android:textColor">@color/mua_txt_gray</item>
    </style>

    <style name="web_map_call">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>