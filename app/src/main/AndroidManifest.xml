<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.firstapp.weatherapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherApp"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".activities.study.StartWebBrowser"
            android:exported="true" />
        <activity
            android:name=".activities.study.WebBrowser"
            android:exported="true"
            android:label="MyBrowser" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="http" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.study.WebMapCallActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.UserAddedActivity"
            android:exported="true" />
        <activity
            android:name=".activities.user.RemoveUserActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.removeUser" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.user.ShowAllUsersActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showAllUsers" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityDateExtended"
            android:exported="true"
            android:label="Date Extended" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showdate" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityDate"
            android:exported="true"
            android:label="Date" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showdate" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityTime"
            android:exported="true"
            android:label="Time" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.showtime" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.user.AddUserActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="ru.startandroid.intent.action.addUser" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.user.MainUserActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>